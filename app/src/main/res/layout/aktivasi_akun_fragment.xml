<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout


        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:orientation="vertical"
            tools:context=".nasabah.ui.aktivasiakun.AktivasiAkun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingEnd="@dimen/sp_16"
                android:paddingStart="@dimen/sp_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16"
                    android:text="Untuk aktivasi akun, harap isi data dibawah" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/sp_20"
                    android:background="@color/black"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:weightSum="3">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pickImage"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/putih"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/sp_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Foto KTP Anda"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_namafile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPLOAD BUKTI TRANSFER ANDA" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_foto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:maxHeight="@dimen/dp_200"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:background="@color/colorPrimary"
                android:textColor="@color/putih"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/sp_20"
                android:text="KIRIM" />

        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
