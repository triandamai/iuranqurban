<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".admin.ui.jenishewan.TambahHewan">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/sp_16"
        android:paddingEnd="@dimen/sp_16"
        android:paddingTop="@dimen/dp_30">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Jenis Hewan" />

        <EditText
            android:id="@+id/et_namahewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/myedittext"
            android:padding="@dimen/dp_10"
            android:layout_margin="@dimen/dp_5"
            android:hint="Masukkan Jenis Hewan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga" />

        <EditText
            android:id="@+id/et_nominal"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:background="@drawable/myedittext"
            android:padding="@dimen/dp_10"
            android:inputType="number"
            android:hint="Nominal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@color/colorPrimary"
            android:textColor="@color/putih"
            android:text="SIMPAN" />
    </LinearLayout>
</layout>
